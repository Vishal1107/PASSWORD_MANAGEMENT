<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
        integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog=="
        crossorigin="anonymous" />

</head>

<body>

    <%- include("../includes/navbar.ejs"); %>

    <main class="container">
        <div class="row">
            <div class="col-md-12 mt-5">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-outline-primary" data-toggle="modal"
                    data-target="#passwordDetailsModal">
                    Add New Password Details
                </button>

                <!-- Modal -->
                <div class="modal fade" id="passwordDetailsModal" tabindex="-1"
                    aria-labelledby="passwordDetailsModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="passwordDetailsModalLabel">Add New Password Details</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">

                                <form id="passwordDetailsForm" action="" method="post">

                                    <div class="form-group">
                                        <label for="categoryName">Category Name</label>
                                        <input type="text" class="form-control" id="categoryName" name="categoryName">
                                    </div>

                                    <div class="form-group">
                                        <label for="passwordDetails">Password Details</label>
                                        <textarea name="passwordDetails" class="form-control" id="passwordDetails"
                                            cols="30" rows="10"></textarea>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-outline-primary">Add</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>



                <!-- UPDATE PASSWORD DETAILS MODEL -->

                <div class="modal fade" id="updatePasswordDetailsModal" tabindex="-1"
                    aria-labelledby="updatePasswordDetailsModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="updatePasswordDetailsModalLabel">Update Password Details
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">

                                <form id="updatePasswordDetailsForm" action="" method="post">

                                    <div class="form-group">
                                        <label for="updateCategoryName">Category Name</label>
                                        <input type="text" class="form-control" id="updateCategoryName"
                                            name="updateCategoryName">
                                    </div>

                                    <div class="form-group">
                                        <label for="updatePasswordDetails">Password Details</label>
                                        <textarea name="updatePasswordDetails" class="form-control"
                                            id="updatePasswordDetails" cols="30" rows="10"></textarea>
                                    </div>

                                    <input type="hidden" name="updateId" id="updateId">

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-outline-primary">Add</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>


                <!-- VIEW PASSWORD DETAILS MODEL -->

                <div class="modal fade" id="viewPasswordDetailsModal" tabindex="-1"
                    aria-labelledby="viewPasswordDetailsModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="viewPasswordDetailsModalLabel">View Password Details
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body" id="viewDetails">

                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary"
                                    data-dismiss="modal">Close</button>
                            </div>

                        </div>
                    </div>
                </div>


                <!-- Records -->
                <table class="table table-striped mt-5">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>View</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </main>




    <!-- Include Footer Script -->
    <%- include("../includes/footerScripts.ejs") %>
    <script>
        CKEDITOR.replace('passwordDetails');
        CKEDITOR.replace('updatePasswordDetails');
    </script>

    <script src="ajax/ajax.js"></script>

</body>

</html>